{
  "name": "NoTalk",
  "version": "0.0.0",
  "displayname": "NOOXY Chat Service",
  "description": "A service that provide live chat, channel and other features.",

  "Authors": [
    "NOOXY",
    "noowyee"
  ],

  "implementation_api": false,

  "dependencies": {
    "node_packages": {},
    "services": {}
  },

  "JSONfunciton_prototypes": {
    "createCh": {
      "displayname": "Create a channel.",
      "description": "Create a NoTalk channel.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "t": "Type of channel for example 'live' or 'normal'",
          "p": "Privaty of channel for example 'public', 'locked' or 'private'",
          "n": "Channel's name.",
          "d": "Channel's discribtion."
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "bindCh": {
      "displayname": "Bind a channel.",
      "description": "Keep in touch in specified channel. Then will recieve new messages from activitysocket.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID."
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "getChRows": {
      "displayname": "Get history",
      "description": "Get history from a existed channel.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID.",
          "s": "Start row of data from the channel.",
          "e": "End row of data from the channel."
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status.",
          "r": ["row number", "type", "data"]
        }
      }
    },

    "editChRow": {
      "displayname": "Get history",
      "description": "Get history from a existed channel.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID.",
          "t": "Type of operation. 'del' or 'edit'",
          "n": "New contain."
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "listChs": {
      "displayname": "List channels",
      "description": "List channels of the user have.",
      "secure": false,
      "protocol": {
        "JSON_call": null,
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "getChMeta": {
      "displayname": "Get channel's meta.",
      "description": "Recieve channel's metadata from server.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID."
        },
        "JSON_return": {
          "o": "owners",
          "n": "displayname",
          "d": "discription",
          "u": "users",
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "getChUsers": {
      "displayname": "Get channel's meta.",
      "description": "Recieve channel's metadata from server.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID."
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status.",
          "d": [
            ["username", "isadmin"]
          ]
        }
      }
    },

    "addChUsers": {
      "displayname": "Add users.",
      "description": "Add NoTalk users into a channel.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID.",
          "u":[
            ["username", "isadmin"]
          ]
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "editChUsers": {
      "displayname": "Edit user.",
      "description": "Edit NoTalk users in a channel.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID.",
          "u":[
            ["username", "new isadmin"]
          ]
        },
        "JSON_return": {
          "s": "Status.",
          "e": "Error status."
        }
      }
    },

    "updateChMeta": {
      "displayname": "Update channel's meta.",
      "description": "Update channel's metadata of server.",
      "secure": false,
      "protocol": {
        "JSON_call": {
          "c": "Channel's ID.",
          "d": "Displayname."
        },
        "JSON_return": {
          "o": "owners",
          "n": "displayname",
          "d": "discription",
          "u": "users",
          "s": "Status.",
          "e": "Error status."
        }
      }
    }
  }
}
